# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID куда бот будет присылать новости (ваш личный чат ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# Telegram Channel ID (например @your_channel или -100xxxxxxxxxx)
TELEGRAM_CHANNEL_ID=@your_channel_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (по умолчанию gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Интервал проверки новостей в минутах
CHECK_INTERVAL_MINUTES=10

# Минимальный порог хайпа для отправки (7-10)
HYPE_THRESHOLD=7
